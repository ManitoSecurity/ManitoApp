<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:weightSum="2"
    android:clipChildren="false"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/welcomeSplash"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_marginTop="40dp">
    <ImageView
        android:id="@+id/welcomeLogoTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@drawable/welcome_screen_logo"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/button_wrapper"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:gravity="bottom"
        android:clipChildren="false"
        android:layout_marginBottom="20dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/set_up_button"
            android:layout_height="50dp"
            android:layout_width="200dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/medium"
            android:text="set up"
            android:layout_centerHorizontal="true"/>


        <Button
            android:id="@+id/website_button"
            android:layout_marginTop="15dp"
            android:layout_height="50dp"
            android:layout_width="200dp"
            android:layout_below="@+id/set_up_button"
            android:text="what is manito?"
            android:background="@drawable/rounded_button"
            android:textColor="@color/medium"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/help_button"
            android:layout_marginTop="15dp"
            android:layout_height="50dp"
            android:layout_width="200dp"
            android:background="@drawable/rounded_button"
            android:layout_below="@+id/website_button"
            android:textColor="@color/medium"
            android:text="help"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</LinearLayout>